{
  "name": "aroha-bookings",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20.11"
  },
  "scripts": {
    "// dev & local": "",
    "dev": "CSS_TRANSFORMER_WASM=1 next dev --turbopack",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint",
    "// prisma utilities": "",
    "db:gen": "prisma generate --schema=prisma/schema.prisma",
    "db:studio": "prisma studio --schema=prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=prisma/schema.prisma",
    "db:deploy": "prisma migrate deploy --schema=prisma/schema.prisma",
    "db:reset": "prisma migrate reset --schema=prisma/schema.prisma",
    "db:pull": "prisma db pull --schema=prisma/schema.prisma",
    "db:push": "prisma db push --schema=prisma/schema.prisma",
    "// seeding & superadmin bootstrap": "",
    "seed": "tsx prisma/seed.ts",
    "ensure:superadmin": "tsx scripts/ensureSuperAdminOrg.ts",
    "// build & start (local/prod)": "",
    "prebuild": "npm run db:gen",
    "build": "next build --turbopack",
    "start": "next start",
    "// vercel build hook (runs on Vercel)": "",
    "vercel-build": "npm run db:deploy && next build --turbopack",
    "// formatting": "",
    "format": "prettier --write .",
    "// postinstall: make sure Prisma client exists both locally & in Vercel": "",
    "postinstall": "npm run db:gen"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.0",
    "@prisma/client": "^6.17.1",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "next": "15.5.4",
    "next-auth": "^4.24.11",
    "nodemailer": "^6.10.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.53.0",
    "twilio": "^5.10.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@types/node": "^20.19.21",
    "@types/nodemailer": "^7.0.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@types/twilio": "^3.19.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.12.0",
    "eslint-config-next": "15.5.4",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "prisma": "^6.17.1",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
