{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "noEmit": true,
    "incremental": true,
    /* Strict enough for reliability without choking on generated code */
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    /* For interop + JSON imports */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    /* Global types + Next plugin */
    "types": [
      "node",
      "next",
      "react",
      "react-dom"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
"include": [
  "app/**/*",
  "components/**/*",
  "lib/**/*",
  "next-env.d.ts",
  "pages/**/*",
  "prisma/**/*",
  ".next/types/**/*.ts",
  "types/**/*.d.ts"        // ðŸ‘ˆ ADD THIS LINE
],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    ".vercel",
    "dist",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "watchOptions": {
    "excludeDirectories": [
      ".next",
      "node_modules",
      "dist",
      "out",
      ".vercel"
    ]
  }
}
